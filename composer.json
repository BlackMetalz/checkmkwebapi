{
    "name": "bheisig/checkmkwebapi",
    "version": "0.2",
    "description": "Easy-to-use, but feature-rich client library for Check_MK's Web API",
    "type": "library",
    "keywords": ["check_mk", "checkmk", "wato", "monitoring", "monitoring love", "api"],
    "homepage": "https://github.com/bheisig/checkmkwebapi",
    "license": "AGPL-3.0+",
    "authors": [
        {
            "name": "Benjamin Heisig",
            "email": "benjamin@heisig.name",
            "homepage": "https://benjamin.heisig.name/",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/bheisig/checkmkwebapi/issues",
        "source": "https://github.com/bheisig/checkmkwebapi"
    },
    "require": {
        "php": ">=5.6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.*",
        "theseer/phpdox": "^0.11.0",
        "phploc/phploc": "^4.0",
        "phpmd/phpmd" : "@stable",
        "phpstan/phpstan": "^0.9.2",
        "sebastian/phpcpd": ">=3.0.1"
    },
    "autoload": {
        "psr-4": {
            "bheisig\\checkmkwebapi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "bheisig\\checkmkwebapi\\tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 600
    },
    "scripts": {
        "gitstats": "gitstats -c project_name='bheisig/checkmkwebapi' . gitstats",
        "gource": "gource -1280x720 --seconds-per-day 3 --auto-skip-seconds 1 --title 'bheisig/checkmkwebapi'",
        "phpcpd": "./vendor/bin/phpcpd src/",
        "phpdox": "./vendor/bin/phpdox",
        "phploc": "./vendor/bin/phploc --exclude=vendor --exclude=docs --exclude=build .",
        "phpmd": "./vendor/bin/phpmd src text cleancode,codesize,controversial,design,naming,unusedcode",
        "phpstan": "./vendor/bin/phpstan analyze -l max src",
        "phpunit": "./vendor/bin/phpunit --configuration tests/phpunit.xml",
        "syntax-check": [
            "php -l src/",
            "php -l tests/"
        ]
    },
    "scripts-descriptions": {
        "gitstats": "Create Git statistics",
        "gource": "Visualize Git history",
        "phpcpd": "Detect copy/paste in source code",
        "phpdox": "Create source code documentation",
        "phploc": "Print source code statistics",
        "phpmd": "Detect mess in source code",
        "phpstan": "Analyze source code",
        "phpunit": "Perform unit tests",
        "syntax-check": "Check syntax of source code"
    }
}
